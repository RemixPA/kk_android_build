#!/bin/bash

sdate=${1}
tdate=`date +"%m/%d/%Y"`
cdate=`date +"%y%m%d"`
rdir=`pwd`
logdir=`pwd`/changelog
if [ -d "$logdir" ]; then
mkdir $logdir
fi
logfile=Changelog_$cdate.log

rm -f "$logdir"/"$logfile"

# Check the date start range is set
if [ -z "$sdate" ]; then
    echo ""
    echo "----------------------- ATTENTION: Start date not defined -----------------------"
    echo ""
    echo "             >>> Please define a start date in mm/dd/yyyy format <<<             "
    echo ""
    echo "---------------------------------------------------------------------------------"
    echo "please input start date:"
    read idate
    if [ "$idate" == "" ];then
        exit
    fi
    sdate=$idate
fi

# Find the directories to log
echo "RemixPA Changelog Generating -------------------"
echo ""
# Log starter
echo "RemixPA Changelog from $sdate" - "$tdate" >> "$logdir"/"$logfile"
echo "---------------------------------------------------------------" >> "$logdir"/"$logfile"
echo "" >> "$logdir"/"$logfile"
find -name .git | sed 's/\/.git//g' | sed 'N;$!P;$!D;$d' | while read line
do
cd $line
    # Test to see if the repo needs to have a changelog written.
    log=$(git log --pretty="%an - %s" --no-merges --since=$sdate --date-order)
    # Forgive my bad script :P
    project=${line#*/}
    if [ ! -z "$log" ]; then
        # Write the changelog
        echo " >>> Changelog is updated and written for $project ..."
        echo "Project: $project" >> "$logdir"/"$logfile"
        echo "$log" | while read line
        do
        echo " $line" >> "$logdir"/"$logfile"
        done
        echo "" >> "$logdir"/"$logfile"
    fi
cd $ANDROID_BUILD_TOP
done
count=`grep -c "" "$logdir"/"$logfile"`
if [ "$count" == "3" ]; then
    echo "No changes, maybe we delayed commit." >> "$logdir"/"$logfile"
    echo "" >> "$logdir"/"$logfile"
fi
echo "---------------------------------------------------------------" >> "$logdir"/"$logfile"
echo "You can see more changelog from http://github.com/RemixPA" >> "$logdir"/"$logfile"
